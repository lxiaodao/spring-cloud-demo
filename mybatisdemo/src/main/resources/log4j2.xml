<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
    <Appenders>
        <!--将日志在控制台输出-->
        <Console name="console" target="SYSTEM_OUT" follow="true">
        
            <!--日志输出的格式-->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:SSS} %p $r [%t] %C.%M(%L) | %m%n"/>
        </Console>

       

        <NoSql name="mongoAppender" bufferSize="18"><!-- debug日志 -->
            <MongoDb3 username="lxiaodao" password="123" databaseName="logdb" collectionName="businesslog" server="localhost" port="27017"/>
      
            
        </NoSql>
        
     
        <File name="fileAppender" fileName="logs/mybatisdemo.log">
      
          <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:SSS} %p $r [%t] %C.%M(%L) | %m%n"/>
      
         </File>
        
    </Appenders>

    <Loggers>
        
   
      
        <Root level="info">
            <appender-ref ref="console"/>
            <appender-ref ref="mongoAppender"/>
            <appender-ref ref="fileAppender"/>
        </Root>
        <!-- For application define -->
        <logger level="debug" name="Inventory_Module" />
    </Loggers>
</Configuration>